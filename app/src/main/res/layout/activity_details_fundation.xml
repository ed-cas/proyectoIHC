<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Fdetailsfundation"
    android:background="#ffffff"
    tools:context=".details_fundation">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/namefundation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fundacion"
                android:textAlignment="center"
                android:textColor="#111111"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:elevation="3dp"
                >

                <ImageView
                    android:id="@+id/img_fundation"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_margin="1dp"
                    android:src="@drawable/images"
                    />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/fundation_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAlignment="center"
                android:text="Discapacidad Visual"
                />

            <TextView
                android:id="@+id/fundation_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Fundacion dedicada a ayudar a jovenes con discapacidad visual auditiva que deseen aprender a leer y escribir en braille"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp"
                android:text=" (2-22) 2222738493"
                />

            <TextView
                android:id="@+id/fundation_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Av San Claudio 14, Cd Universitaria, Cdad. Universitaria, 72592 Puebla, Pue"
                android:textAlignment="center"
                android:textSize="20sp" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>













